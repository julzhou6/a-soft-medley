---
const { page } = Astro.props;
---

<div class="browser-bar"></div>
<div class="card">
    <div>
        <img
            class="preview-image"
            src={page._embedded["wp:featuredmedia"][0].source_url}
            alt={page._embedded["wp:featuredmedia"][0].alt_text}
        />
        <h2 class="preview-title" set:html={page.title.rendered} />
    </div>
    <a class="preview-btn" href={"/projects/" + `${page.slug}`}
        ><span>Check it out</span></a
    >
</div>

<style>
    .browser-bar {
        border-style: solid;
        border-bottom: none;
        border-width: 2px;
        border-top-right-radius: 10px;
        border-top-left-radius: 10px;
        height: 25px;
        background-color: orange;
    }

    .card {
        border-color: black;
        border-end-end-radius: 10px;
        border-end-start-radius: 10px;
        border-style: solid;
        border-width: 2px;
        max-width: 341px;
        height: 100%;
        /* background-color: rgb(255, 165, 0); */
    }
    .preview-image {
        width: 100%;
        height: 150px;
        object-fit: cover;
        object-position: 25% 30%;
        display: flex;
    }

    .preview-title {
        padding: 0 2rem;
    }
    .preview-btn {
        margin: 0 2rem;
        padding: 0.5rem;
        border-style: solid;
        border-width: 1.5px;
        text-decoration: none;
        color: black;
    }
    .preview-btn:hover {
        background-image: repeating-linear-gradient(
            -45deg,
            transparent,
            transparent 10px,
            orange 10px,
            orange 20px
        );
        box-shadow: 7px 6px 5px orange;

        transition: 0.4s ease-in;
    }
</style>
