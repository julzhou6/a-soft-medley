---
const { page } = Astro.props;
---

<div class="browser-bar">
    <div class="min-btn"></div>
    <div class="x-btn"></div>
</div>
<div class="card">
    <div>
        <img
            class="preview-image"
            src={page._embedded["wp:featuredmedia"][0].source_url}
            alt={page._embedded["wp:featuredmedia"][0].alt_text}
        />
        <h2 class="preview-title" set:html={page.title.rendered} />
    </div>
    <a class="preview-btn" href={"/projects/" + `${page.slug}`}
        ><span>Check it out</span></a
    >
</div>

<style>
    .browser-bar {
        border-style: solid;
        border-color: var(--nav-light);
        border-bottom: none;
        border-width: 2px;
        border-top-right-radius: 10px;
        border-top-left-radius: 10px;
        height: 25px;
        background-color: rgb(255,153,0);
        display: flex;
        justify-content: end;
    }
    .min-btn {
        width: 12px;
        height: 12px;
        border-style: solid;
        border-color: var(--nav-light);
        border-width: 1px;
        position: relative;
        display: flex;
        align-self: center;
        justify-content: center;
        margin: 10px 5px 10px 5px;
    }

    .min-btn::after {
        position: absolute;
        margin-top: 6px;
        content: "";
        border-top: 1px solid black;
        border-width: thin;
        width: 6px;
    }

    .x-btn {
        width: 12px;
        height: 12px;
        border-style: solid;
        border-color: var(--nav-light);
        border-width: 1px;
        position: relative;
        display: flex;
        align-self: center;
        justify-content: center;
        margin: 10px 10px 10px 5px;
    }

    .x-btn::after {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        content: "\d7";
        font-size: 19px;
        font-weight: normal;
        color: var(--nav-light);
        text-align: center;
        line-height: 11px;
    }
    .card {
        border-color: var(--nav-light);
        border-end-end-radius: 10px;
        border-end-start-radius: 10px;
        border-style: solid;
        border-width: 2px;
        max-width: 341px;
        height: 100%;
        /* background-color: rgb(255, 165, 0); */
    }
    .preview-image {
        width: 100%;
        height: 150px;
        object-fit: cover;
        object-position: 25% 30%;
        display: flex;
    }

    .preview-title {
        padding: 0 2rem;
    }
    .preview-btn {
        margin: 0 2rem;
        padding: 0.5rem;
        border-style: solid;
        border-width: 1.5px;
        border-color: var(--nav-light);
        text-decoration: none;
        color: black;
        outline: 0;
        position: relative;
    }
    .preview-btn:after {
        content: "";
        width: 100%;
        height: 100%;
        z-index: -1;
        position: absolute;
        top: 7px;
        left: 7px;
        border-color: orange;
        border-width: 1px;
        border-style: solid;
        background-image: repeating-linear-gradient(
            -45deg,
            transparent,
            transparent 10px,
            orange 10px,
            orange 20px
        );
    }
    .preview-btn:hover::after {
        top: 0;
        left: 0;
        transition: 0.4s;
    }
</style>
